= bootstrap_form_for(@loan, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-3') do |f|
  = f.number_field :number, min: 0, max:@loan.item.number_available, step: 1
  = f.collection_select :borrower_id, @loan.owner.other_owners, :id, :name, {}, { class: 'improved-select' }
  = f.date_field :date_loan
  = f.text_field :state
  = f.hidden_field :owner_id, :value => @loan.owner.id
  = f.hidden_field :item_id, :value => @loan.item.id


  .col-sm-offset-2
    = f.primary I18n.t 'views.buttons.save'