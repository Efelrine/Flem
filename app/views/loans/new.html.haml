.page-header
  %h1 Nouvel emprunt 
  = @loan.item.name
  de 
  = @loan.owner.name
  \: Plus que
  = item_number_available(@loan.item)
  disponibles.

= render partial: 'form'

.links
  - if params[:owner_id].nil?
    = link_to items_path, class: 'btn btn-default btn-xs' do
      %span.fa.fa-index
      Retour à la liste
  - else
    = link_to personalItems_url(get_owner(params[:owner_id])), class: 'btn btn-default btn-xs' do
      %span.fa.fa-index
      Retour à la liste