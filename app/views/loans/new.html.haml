.page-header
  %h1 Nouvel emprunt 
  = @loan.item.name
  de 
  = @loan.owner.name
  \: Plus que
  = @loan.item.number_available
  disponibles.

= render partial: 'form'

.links
  - if @param_owner.nil?
    = link_to items_path, class: 'btn btn-default btn-xs' do
      %span.fa.fa-index
      #{I18n.t 'views.buttons.return'}
  - else
    = link_to personal_items_url(@param_owner), class: 'btn btn-default btn-xs' do
      %span.fa.fa-index
      #{I18n.t 'views.buttons.return'}