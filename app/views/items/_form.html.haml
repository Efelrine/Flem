= bootstrap_form_for(@item, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-3') do |f|
  = f.text_field :name
  = f.collection_select :category_id, @all_categories, :id, :name, {:include_blank=> ""}, { class: 'improved-select' }
  = f.number_field :number, min: 0, max:500, step: 1
  = f.collection_select :owner_id, @owners_by_user, :id, :name, {:selected => @id_owner_default}, { class: 'improved-select' }
  = f.text_field :location
  = f.number_field :price, min: 0, max:5000, step: 1

  .col-sm-offset-2
    = f.check_box :is_loanable

  = f.text_field :comment

  .col-sm-offset-2
    = f.check_box :is_lost

  .col-sm-offset-2
    - if defined? save_and_new
      = f.primary I18n.t('views.buttons.save_and_new')
    = f.primary I18n.t('views.buttons.save')